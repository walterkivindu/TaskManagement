<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFCCCC"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />
        <TextView
            android:id="@+id/lblTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Name  "
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblTaskName"
            android:paddingTop="20dp"
            android:singleLine="true"
            android:text="Task Name"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lblTaskImportance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Importance:  "
            android:layout_below="@+id/tvTaskName"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvTaskImportance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTaskName"
            android:layout_toRightOf="@+id/lblTaskImportance"
            android:text="Low"
            android:paddingTop="20dp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblTaskComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/tvTaskImportance"
            android:singleLine="true"
            android:text="Task Complete?"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/tvTaskComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_below="@+id/tvTaskImportance"
            android:layout_toRightOf="@+id/lblTaskComplete"
            android:text="No"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblTaskCreatinDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTaskComplete"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:text="Created on:"
            android:textSize="16sp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/tvTaskCreatinDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_below="@+id/tvTaskComplete"
            android:layout_toRightOf="@+id/lblTaskCreatinDate"
            android:text="2017-02-16"
            android:textSize="16sp"
            android:textStyle="italic" />
        
        <TextView
            android:id="@+id/lblTaskDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTaskCreatinDate"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:text="Due Date:"
            android:textSize="16sp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/tvTaskDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_below="@+id/tvTaskCreatinDate"
            android:layout_toRightOf="@+id/lblTaskDueDate"
            android:text="2017-02-26"
            android:textSize="16sp"
            android:textStyle="italic" />

        </RelativeLayout>

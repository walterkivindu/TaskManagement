<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.taskmanagement.TasksActivity" >

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Id number" />
    <TextView
        android:id="@+id/lblTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:text="Task name:" />

    <EditText
        android:id="@+id/tvTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:textStyle="bold" 
        android:layout_toRightOf="@+id/lblTaskName"
        android:paddingTop="30dp" />

    <TextView
        android:id="@+id/lblTaskimp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskName"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="Task Importance:" />

    <EditText
        android:id="@+id/tvTaskimp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskName"
        android:ems="20"
        android:textStyle="bold" 
        android:layout_toRightOf="@+id/lblTaskimp"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/lblTaskComp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskimp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="Task Complete:" />

    <EditText
        android:id="@+id/tvTaskComp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskimp"
        android:ems="20"
        android:textStyle="bold" 
        android:layout_toRightOf="@+id/lblTaskComp"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/lblTaskcDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskComp"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:text="Task Create Date:" />

    <EditText
        android:id="@+id/tvTaskcDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskComp"
        android:layout_toRightOf="@+id/lblTaskcDate"
        android:paddingTop="20dp"
        android:ems="20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblTaskdDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskcDate"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:text="Task Due Date:" />

    <EditText
        android:id="@+id/tvTaskdDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskcDate"
        android:layout_toRightOf="@+id/lblTaskdDate"
        android:paddingTop="20dp"
        android:ems="20"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskdDate"
        android:paddingTop="20dp" 
        android:id="@+id/button1"
        android:layout_marginLeft="30dp"
        android:text="Pre"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskdDate"
        android:paddingTop="20dp" 
        android:id="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:text="Next>>"/>

</RelativeLayout>